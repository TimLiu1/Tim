{
    "loggerLevel": "info",
    "express": {
        "view cache": false,
        "view engine": "js",
        "views": "path:./.build/templates"
    },

    "emailConfig": {
        "tim": {
            "service": "qq",
            "host": "smtp.qq.com",
            "user": "995332120@qq.com",
            "password": "Srzh201314",
            "fromMail": "Tim's blog<995332120@qq.com>",
            "maxConnections": 10,
            "port": 465,
            "secure": true
        }
    },
    "view engines": {
        "js": {
            "module": "makara",
            "renderer": {
                "method": "js",
                "arguments": [
                    {
                        "cache": true,
                        "helpers": "config:dust.helpers"
                    }
                ]
            }
        }
    },
    "dust": {
        "helpers": []
    },
    "specialization": {},
    "middleware": {
        "makara": {
            "priority": 100,
            "enabled": true,
            "module": {
                "name": "makara",
                "arguments": [
                    {
                        "i18n": "config:i18n",
                        "specialization": "config:specialization"
                    },
                    {
                        "csrf": false,
                        "xframe": "SAMEORIGIN",
                        "p3p": false,
                        "csp": false
                    }
                ]
            }
        },
        "static": {
            "module": {
                "arguments": [
                    "path:./.build"
                ]
            }
        },
        "router": {
            "module": {
                "arguments": [
                    {
                        "directory": "path:./controllers"
                    }
                ]
            }
        },
        /**
         * Override the default lusca configuration to disable CSRF handling.
         */
        "appsec": {
            "module": {
                "arguments": [
                    {
                        "xframe": "SAMEORIGIN",
                        "p3p": false,
                        "csp": false
                    }
                ]
            }
        },
        /**
         * Enable *ONLY* CSRF filtered by route.
         * Note: The route "regex" needs the double parens
         * because of how express parses route strings.
         */
        "csrf": {
            "enabled": true,
            "priority": 111,
            "route": "/((?!api))*",
            "module": {
                "name": "lusca",
                "method": "csrf",
                "arguments": [
                    {}
                ]
            }
        }
    }
}