{
    "loggerLevel": "debug",
    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },
    "cacheConfig": {
        "port": 6379,
        "host": "localhost",
        "password": "123abc",
        "options": {}
    },
    "databaseConfig": {
        // "host": "localhost:27017",
        "host": "123.206.217.94",
        "database": "Tim",
        "options": {
            "user": "tim",
            "pass": "1qaz2wsx",
            "useMongoClient": true,
            "server": {
                "auto_reconnect": true,
                "poolSize": 10
            }
        }
    },
    "view engines": {
        "dust": {
            "module": "makara",
            "renderer": {
                "method": "dust",
                "arguments": [
                    {
                        "cache": false,
                        "helpers": "config:dust.helpers",
                        "whitespace": true
                    }
                ]
            }
        }
    },
    "middleware": {
        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "construx",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        "template": {
                            "module": "construx-dustjs",
                            "files": "/templates/**/*.js",
                            "base": "templates"
                        },
                        "copier": {
                            "module": "construx-copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        },
        "csrf": {
            "enabled": false,
            "priority": 111,
            "route": "/((?!tpi|weixin|api|level|data|agent))*",
            "module": {
                "name": "lusca",
                "method": "csrf",
                "arguments": [
                    {}
                ]
            }
        }
    }
}