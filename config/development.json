{
     "loggerLevel": "debug",
    "express": {
        "view cache": false,
        "view engine": "dust",
        "views": "path:./public/templates"
    },

      "databaseConfig": {
        // "host": "localhost"
        "host": "115.159.146.35",
        "database": "Tim",
        "options": {"user": "tim", "pass": "1qaz2wsx"}
    },

    
    "view engines": {
        "dust": {
            "module": "makara",
            "renderer": {
                "method": "dust",
                "arguments": [
                    {
                        "cache": false,
                        "helpers": "config:dust.helpers",
                        "whitespace": true
                    }
                ]
            }
        }
    },
    
    

    "middleware": {

        "devtools": {
            "enabled": true,
            "priority": 35,
            "module": {
                "name": "construx",
                "arguments": [
                    "path:./public",
                    "path:./.build",
                    {
                        
                        "template": {
                            "module": "construx-dustjs",
                            "files": "/templates/**/*.js",
                            "base": "templates"
                        },
                        
                        
                        "copier": {
                            "module": "construx-copier",
                            "files": "**/*"
                        }
                    }
                ]
            }
        },
         "csrf": {
            "enabled": false,
            "priority": 111,
            "route": "/((?!tpi|weixin|api|level|data|agent))*",
            "module": {
                "name": "lusca",
                "method": "csrf",
                "arguments": [
                    {}
                ]
            }
        }

    }
}
